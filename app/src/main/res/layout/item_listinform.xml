<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.NotificationFragment">

    <!-- Items inform Start-->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="90dp"
            tools:ignore="MissingConstraints">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/img_avatarNotification"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="5dp"
                android:src="@drawable/demo_avatar"
                app:layout_constraintBottom_toTopOf="@+id/img_like"
                app:layout_constraintEnd_toEndOf="@+id/img_like"
                app:layout_constraintStart_toStartOf="@+id/img_like" />
    <!-- username and content notification start-->
            <LinearLayout
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"

                >
                <TextView
                    android:id="@+id/txt_usernameNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="Nguyễn Văn A"
                    android:textSize="18sp"
                    android:textColor="#111212"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/txt_contentNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đã thích bài viết của bạn"
                    android:layout_marginLeft="5dp"
                    android:textStyle="italic"
                    android:textSize="16sp"
                    android:textColor="#0E0E0E"
                    />
            </LinearLayout>
    <!-- username and content notification end-->
    <!-- time and icon like start-->
            <LinearLayout
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/txt_timeNotification"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:text="10 phút"
                    android:textSize="14sp"
                    android:textColor="#0E0E0E"
                    android:textAlignment="center"
                    android:gravity="center"

                   />
                <ImageView
                    android:id="@+id/img_Notification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/avatar"
                    />
            </LinearLayout>

        </TableRow>
    <!-- Items inform End-->

</androidx.constraintlayout.widget.ConstraintLayout>