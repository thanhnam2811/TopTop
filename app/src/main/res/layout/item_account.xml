<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.SearchFragment">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_avatarUser"
        android:layout_width="60dp"
        android:layout_height="54dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:src="@drawable/default_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_usernameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="thanhnam1324"
        android:textColor="@color/grey_500"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txtfollow"
        app:layout_constraintStart_toStartOf="@+id/txt_fullnameSearch"
        app:layout_constraintTop_toBottomOf="@+id/txt_fullnameSearch" />

    <TextView
        android:id="@+id/txt_fullnameSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Thái Thành Nam"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_avatarUser"
        app:layout_constraintTop_toTopOf="@+id/img_avatarUser" />

    <TextView
        android:id="@+id/txtfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/followers"
        android:textColor="@color/grey_500"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@+id/number_followerSearch"
        app:layout_constraintStart_toEndOf="@+id/number_followerSearch"
        app:layout_constraintTop_toTopOf="@+id/number_followerSearch" />

    <TextView
        android:id="@+id/number_followerSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="26"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatarUser"
        app:layout_constraintStart_toStartOf="@+id/txt_fullnameSearch" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_followSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/text_box_bg"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/follow"
        android:textColor="@color/main_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_avatarUser"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_avatarUser" />


</androidx.constraintlayout.widget.ConstraintLayout>